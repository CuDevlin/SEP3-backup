    private async Task RemoveTodo(int id)
    {
        msg = "";
        try
        {
            await itemService.DeleteAsync(id);
        
            var list = new List<Item>(items!);
            list.RemoveAll(todo => todo.Id == id);
            items = list.AsEnumerable();
        }
